
#include <iostream>
#include <cmath>
using namespace std;
int countDigits(int n)
{
    if (n == 0)
    {
         return 1;
    }
    if (n < 0)
    {
         n = -n;
    }

    int count = 0;
    while (n > 0)
    {
        n = n / 10;
        count++;
    }
     return count;
}
int main()
{
  cout<<"Please Enter Numbers"<<endl;
  int  num;
  cin>> num;
   cout << "Number of digits = " << countDigits(num) << endl;

    return 0;
}

